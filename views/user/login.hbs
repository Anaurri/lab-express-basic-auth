<form method="POST" action="/login">
  <div class="mb-3">
    <label for="usernameInput" class="form-label">Username</label>
    <input name="username" value="{{user.username}}" type="text" class="form-control {{#if errors.username}}is-invalid{{/if}}" id="usernameInput">
    {{#if errors.username}}
    <div class="invalid-feedback">{{errors.username}}</div>
    {{/if}}
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input name="password" type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="exampleInputPassword1">
    {{#if errors.password}}
    <div class="invalid-feedback">{{errors.password}}</div>
    {{/if}}
  </div>
  <button type="submit" class="btn btn-primary">Login</button>
</form>
